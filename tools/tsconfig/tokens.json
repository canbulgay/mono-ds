{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Design Tokens",
  "extends": ["./base.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "lib": ["es2022"],
    "module": "esnext",
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*",
    "tokens/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**"
  ]
}