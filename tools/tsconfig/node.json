{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "extends": ["./base.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**"
  ]
}
