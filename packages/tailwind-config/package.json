{
  "name": "@design-system/tailwind-config",
  "version": "0.0.0",
  "private": true,
  "description": "Shared Tailwind CSS configuration for the design system",
  "type": "module",
  "main": "tailwind.config.js",
  "exports": {
    ".": "./theme.css",
    "./postcss": "./postcss.config.js",
    "./legacy-config": "./tailwind.config.js"
  },
  "files": [
    "*.js",
    "*.css",
    "*.json"
  ],
  "keywords": [
    "tailwindcss",
    "postcss",
    "design-system",
    "config"
  ],
  "scripts": {
    "build": "echo 'No build step required for config package'",
    "lint": "echo 'lint:tailwind-config'",
    "test": "echo 'test:tailwind-config'",
    "typecheck": "echo 'typecheck:tailwind-config'"
  },
  "dependencies": {
    "tailwindcss": "^4.1.5",
    "@tailwindcss/postcss": "^4.1.5",
    "postcss": "^8.4.49"
  },
  "devDependencies": {}
}
