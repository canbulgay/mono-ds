{
  "extends": "../../tools/tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@design-system/core": ["../../packages/core/src"],
      "@design-system/utils": ["../../packages/utils/src"],
      "@design-system/themes": ["../../packages/themes/src"],
      "@design-system/tokens": ["../../packages/tokens/src"],
      "@design-system/icons": ["../../packages/icons/src"],
      "@design-system/tailwind-config": ["../../packages/tailwind-config"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/themes"
    },
    {
      "path": "../../packages/tokens"
    },
    {
      "path": "../../packages/icons"
    }
  ]
}
