{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@design-system/core": ["../../packages/core/src"],
      "@design-system/utils": ["../../packages/utils/src"],
      "@design-system/themes": ["../../packages/themes/src"],
      "@design-system/tokens": ["../../packages/tokens/src"],
      "@design-system/icons": ["../../packages/icons/src"],
      "@design-system/tailwind-config": ["../../packages/tailwind-config"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}